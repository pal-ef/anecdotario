
<div class="row mb-5">
    <div class="card w-100">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="/user/img/{{note.userimg}}" class="card-img h-100" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body text-center">
                    <h2 class="card-title">Anécdota de @{{note.username}}</h2>
                    <p class="card-text"><small class="text-muted">Públicado el {{joined}}</small><br><small class="text-muted">Ultima edición el {{updated}}</small></p>
                </div>
            </div>
        </div>
    </div>
</div>

    <div class="mb-5 d-flex justify-content-center">
        <a href="/like/{{note._id}}">
            <button type="button" class="btn btn-success mx-1 rounded">
                <h1><i class="fas fa-smile-wink"></i></h1>{{likes}}
            </button>
        </a>
        
        <a href="/angry/{{note._id}}">
            <button type="button" class="btn btn-danger mx-1 rounded">
                <h1><i class="fas fa-angry"></i></h1>{{angries}}
            </button>
        </a>

        <a href="/funny/{{note._id}}">
            <button type="button" class="btn btn-warning mx-1 rounded">
                <h1><i class="fas fa-grin-squint"></i></h1>{{funnies}}
            </button>
        </a>

        <a href="/sad/{{note._id}}">
            <button type="button" class="btn btn-primary mx-1 rounded">
                <h1><i class="fas fa-sad-tear"></i></h1>{{sadness}}
            </button>
        </a>

        <a href="/love/{{note._id}}">
            <button type="button" class="btn btn-info mx-1 rounded">
                <h1><i class="fas fa-grin-hearts"></i></h1>{{lovely}}
            </button>
        </a>
    </div>
