    <div class="card w-100">
            <div class="card-body text-center">
                <h2>{{note.title}}</a></h2>
            </div>
        <img src="/user/img/{{note.imageid}}" class="card-img-top" alt="...">
        <div class="card-body">
            
            <p class="card-text">
                {{{text}}}
            </p>
        </div>
    </div>
</div>